<% include ../partials/header %>
  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1 class="text-center">Edit Profile</h1>
    </div>
    <div class="input-box">
      <form action="/users/<%= user._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control" type="text" name="user[username]" value="<%= user.username %>" autocomplete="off" required />
        </div>
        <div class="form-group">
          <label for="avatar">Profile Photo</label>
          <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>" autocomplete="off" />
        </div>
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>" autocomplete="off" required />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>" autocomplete="off" required />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" name="user[email]" value="<%= user.email %>" autocomplete="off" required />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Update Profile</button>
        </div>
      </form>
      <hr>
      <a href="/password_reset">Reset password</a>
      <hr>
      <a href="/users/<%= user._id %>">Back</a>
    </div>
  </div>
<% include ../partials/footer %>