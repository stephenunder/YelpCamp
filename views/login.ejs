<% include ./partials/header %>

<div class="row">
  <h1 class="text-center">Login!</h1>
  <div class="input-box">
    <form action="/login" method="POST">
      <div class="form-group">
          <label for="username">Username</label>
        <input class="form-control" id="username" type="text" name="username" placeholder="username" autofocus />
      </div>
      <div class="form-group">
          <label for="password">Password</label>
        <input class="form-control" id="password" type="password" name="password" placeholder="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Login</button>
      </div>
      <span>Forgot your password? <a href="/forgot">Reset password</a></span>
      <hr />
      <span>New to YelpCamp? <a href="/register">Sign up now!</a></span>
    </form>
    <hr />
    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ./partials/footer %>