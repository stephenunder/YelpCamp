<% include ../partials/header %>

  <div class="row">
    <h1 class="text-center">Create a New Campground</h1>
    <div class="input-box">
      <form action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name *</label>
          <input class="form-control" id="name" type="text" name="name" placeholder="name" autofocus required />
        </div>
        <div class="form-group">
          <label for="image">Image *</label>
          <input class="form-control" id="image" type="file" name="image" accept="image/*" required />
        </div>
        <div class="form-group">
          <label for="price">Price *</label>
          <input class="form-control" id="price" type="number" name="price" placeholder="price" min="0.01" step="0.01" required/>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" id="location" type="text" name="location" placeholder="location">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input class="form-control" id="description" type="text" name="description" placeholder="description" />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>
